<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/idCliente"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAlignment="center" />

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewClient"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewName"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_alignTop="@+id/imageViewClient"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageViewClient"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewDescripcion"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewClient"
                android:layout_below="@+id/textViewName"
                android:layout_alignEnd="@+id/textViewName"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_alignStart="@+id/textViewName"
                android:layout_marginStart="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>